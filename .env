# =============================================
# DISCORD CONFIGURATION (REQUIRED)
# =============================================
DISCORD_TOKEN=your_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_GUILD_ID=your_server_id_here

# =============================================
# BOT SETTINGS
# =============================================
BOT_NAME=Mayonk
BOT_PREFIX=.
BOT_STATUS=online
BOT_ACTIVITY_TYPE=PLAYING
BOT_ACTIVITY_NAME=with 321 plugins
BOT_OWNER_NAME=Laurie
BOT_OWNER_ID=your_discord_id

# =============================================
# DATABASE CONFIGURATION
# =============================================
MONGODB_URI=mongodb://localhost:27017/mayonk
REDIS_URI=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
SQLITE_ENABLED=false

# =============================================
# API KEYS (OPTIONAL)
# =============================================
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL=gpt-4-turbo-preview
GEMINI_API_KEY=your-gemini-key
YOUTUBE_API_KEY=your-youtube-api-key
WEATHER_API_KEY=your-weather-api-key
STABILITYAI_API_KEY=your-stability-key
DEEPAI_API_KEY=your-deepai-key
REMINI_API_KEY=your-remini-key
IMDB_API_KEY=your-imdb-key

# =============================================
# FEATURE TOGGLES
# =============================================
FEATURE_AI=true
FEATURE_AI_CHAT=true
FEATURE_AI_IMAGE=true
FEATURE_DOWNLOADS=true
FEATURE_IMAGE_PROCESSING=true
FEATURE_AUDIO_PROCESSING=true
FEATURE_MODERATION=true
FEATURE_TOOLS=true
FEATURE_GAMES=true
FEATURE_SPORTS=true
FEATURE_WELCOME=true
FEATURE_AUTO_MOD=true

# =============================================
# SECURITY SETTINGS
# =============================================
BOT_OWNERS=owner1_id,owner2_id
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=30
ANTI_SPAM_ENABLED=true
ANTI_SPAM_THRESHOLD=5
ANTI_SPAM_INTERVAL=5000
BLACKLIST_USERS=user1_id,user2_id
BLACKLIST_GUILDS=guild1_id,guild2_id

# =============================================
# PERFORMANCE SETTINGS
# =============================================
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
MAX_CONCURRENT_DOWNLOADS=3
MAX_CONCURRENT_AI_REQUESTS=5
COMMAND_TIMEOUT=30000
DOWNLOAD_TIMEOUT=60000
API_TIMEOUT=15000

# =============================================
# LOGGING SETTINGS
# =============================================
LOG_CONSOLE_ENABLED=true
LOG_CONSOLE_LEVEL=info
LOG_TIMESTAMP=true
LOG_FILE_ENABLED=true
LOG_FILE_LEVEL=debug
LOG_MAX_SIZE_MB=10
LOG_DISCORD_ENABLED=false
LOG_DISCORD_WEBHOOK=your_webhook_url
LOG_DISCORD_LEVEL=error

# =============================================
# DEPLOYMENT SETTINGS
# =============================================
NODE_ENV=development
SHARDING_ENABLED=false
PORT=3000
HOST=localhost
